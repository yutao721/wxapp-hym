.wrap {
  padding-bottom: 200rpx;
}

.search-wrap {
  height: 118rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF;
}

.search {
  height: 68rpx;
  background: #f4f4f4;
  border-radius: 34rpx;
  position: relative;
  flex: 1;
  margin: 0 30rpx;
}

.search-input {
  padding: 0 0 0 30rpx;
  width: 590rpx;
  line-height: 68rpx;
  height: 68rpx;
  font-size: 24rpx;
}

.search-icon {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  right: 8rpx;
  top: 6rpx;
  background: url(https://ycmall-oss.oss-cn-hangzhou.aliyuncs.com/common-static/wxapp-jubensha-sass/icon-01.png) -144rpx -42rpx no-repeat;
  background-size: 200rpx 100rpx;
}

.status-items {
  background: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
}

.status-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #999;
}

.status-item.active {
  color: #FF6A09;
}

.lists {
  background-color: #fff;
  margin: 20rpx 0;
}

.list {
  padding: 20rpx 0;
  margin: 0 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #EFEFEF;
}

.list-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  flex: 100rpx 0 0;
  margin-right: 20rpx;
  background-color: red;
}

.list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.list-info-name {
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.list-info-time {
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count {
  display: flex;
  align-items: center;
}

.count-text {
  color: #000;
}
